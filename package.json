  "scripts": {
    "start": "APPLICATION_NAME=template-app node ./index.js",
    "start:dev": "set debug=* && export NODE_ENV=development && export APPLICATION_NAME=template-app && ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "build": "rm -rf ./dist && tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "test": "export NODE_ENV=test APPLICATION_NAME=template-app && nyc --reporter=html mocha --timeout 10000 --require ts-node/register --recursive ./tests/*.ts ./tests/**/*.test.ts --reporter=list --exit",
    "test:debug": "export NODE_ENV=test DEBUG_TEST=true && nyc --reporter=html mocha --timeout 10000 --require ts-node/register --recursive ./tests/**/*.ts --reporter=list --exit"
  },
